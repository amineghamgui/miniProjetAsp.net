<script>
    function senddata(voiture) {
        let comm = document.getElementById("input_" + voiture).value;
        html = "ecrivez quelque chose"
        if (comm != "") {
            $.ajax({
                url: "/Home/comment",
                type: "post",

                data: {
                    "voiture": voiture,
                    "comm": comm
                },

                success: function (result) {
                    window.location.reload();
                    document.getElementById("input_" + voiture).value = "";
                    document.getElementById("demo").innerHTML = ""
                },
                error: function (errormessage) {
                    alert(errormessage.responseText);
                }
            });

        }

        if (comm == "") {
            document.getElementById("demo").innerHTML = html;
        }

    }





    function gettdata(voiture) {

